local function CreateBackground()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "BackgroundGui"
    screenGui.DisplayOrder = -1  -- 设置为负数，确保在最底层
    screenGui.ResetOnSpawn = false
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    local backgroundImage = Instance.new("ImageLabel")
    backgroundImage.Name = "Background"
    backgroundImage.Image = "https://raw.githubusercontent.com/yxgh165/Picture-Library/main/e84262a45c4e89ac311bb600336b4e09.jpeg"
    backgroundImage.Size = UDim2.new(1, 0, 1, 0)
    backgroundImage.Position = UDim2.new(0, 0, 0, 0)
    backgroundImage.BackgroundTransparency = 1
    backgroundImage.ZIndex = 0
    
    -- 添加到ScreenGui
    backgroundImage.Parent = screenGui
    
    -- 添加到玩家界面
    local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    screenGui.Parent = playerGui
    
    return backgroundImage
end